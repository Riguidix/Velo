@page
@model Velo.Pages.Dashboard.Index

@{
    ViewData["Title"] = "Velo - Dashboard";
    Layout = "_Layout";
}

<div class="container d-flex flex-column gap-3 h-100 py-3">
    <div class="align-items-center d-flex justify-content-between">
        <h1 class="fw-bold fs-2">
            PDF List
        </h1>

        <div class="align-items-center d-flex justify-content-center gap-2">
            <button class="btn btn-lg btn-primary">
                <i class="fa-solid fa-cloud-arrow-up me-2"></i>
                Upload PDF
            </button>
        </div>
    </div>

    <div class="d-flex flex-column rounded-3 overflow-hidden">
        <div class="align-items-center border-bottom d-flex gap-3 p-3">
            <div class="d-flex col-8 gap-3">
                <div class="col-8 d-flex align-items-center">
                    <input 
                        class="form-control" 
                        type="search"
                        placeholder="Search by name, size or date" 
                        aria-label="Search"
                    />
                </div>
            </div>

            <div class="align-items-center d-flex col gap-2 justify-content-end">
                <button class="btn btn-outline-secondary">
                    <i class="fa-solid fa-arrows-rotate"></i>
                </button>
                    
                <button class="btn btn-primary">
                    <i class="fa-solid fa-magnifying-glass me-2"></i>
                    Search
                </button>
            </div>
        </div>

        <div class="table-responsive px-2" style="height: 90vh;">
            <table class="table table-hover table-borderless m-0">
                <thead class="sticky-top bg-white">
                <tr>
                    <th scope="col" class="py-3">#</th>
                    <th scope="col" class="py-3">File Name</th>
                    <th scope="col" class="py-3">Page Count</th>
                    <th scope="col" class="py-3">File Size</th>
                    <th scope="col" class="py-3">Upload Date</th>
                    <th scope="col" class="py-3 text-center">Actions</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <th scope="row">1</th>
                    <td>My_Document.pdf</td>
                    <td>25</td>
                    <td>1.2 MB</td>
                    <td>2023-10-27</td>
                    <td class="text-center">
                        <button class="btn btn-sm btn-secondary me-1">
                            <i class="fa-solid fa-eye"></i>
                        </button>
                        
                        <button class="btn btn-sm btn-secondary">
                            <i class="fa-solid fa-download"></i>
                        </button>
                    </td>
                </tr>

                @* Puedes replicar estas filas con un bucle '@foreach' en tu modelo *@
                <tr>
                    <th scope="row">2</th>
                    <td>Project_Report.pdf</td>
                    <td>10</td>
                    <td>5.8 MB</td>
                    <td>2023-10-25</td>
                    <td class="text-center">
                        <button class="btn btn-sm btn-secondary me-1">
                            <i class="fa-solid fa-eye"></i>
                        </button>
                        
                        <button class="btn btn-sm btn-secondary">
                            <i class="fa-solid fa-download"></i>
                        </button>
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>