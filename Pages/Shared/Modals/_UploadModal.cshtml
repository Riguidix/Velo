<div id="pdfUpload" class="modal fade" tabindex="-1" aria-labelledby="pdfUploadTitle" aria-hidden="true">
    <form id="pdfForm" class="d-none">
        @Html.AntiForgeryToken()
        <input id="pdfInput" class="d-none" name="pdfInput" type="file"/>
    </form>
    
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content p-3">
            <div class="modal-header border-0 pb-2">
                <h5 class="modal-title fw-bold" id="pdfUploadTitle">
                    Upload your PDF file
                </h5>

                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body p-0">
                <div class="border border-2 border-dashed rounded-3 p-5 text-center d-flex flex-column align-items-center justify-content-center">
                    <i class="fa-solid fa-cloud-arrow-up text-secondary fs-1 mb-3"></i>

                    <span id="textContainer" class="text-secondary">
                        Drop your files here, or
                        <a href="#" class="ms-1 text-primary text-decoration-none" onclick="document.getElementById('pdfInput').click();">
                            click to browse
                        </a>
                    </span>
                </div>
            </div>

            <div class="modal-footer border-0 pt-2">
                <div class="d-flex w-100 justify-content-between align-items-center">
                    <span class="text-secondary small">
                        Supported files: .pdf

                        <span class="ms-3">
                            Maximum size: 10MB
                        </span>
                    </span>

                    <button id="btnSubmit" type="button" class="btn btn-primary px-4 fw-bold" disabled>
                        Continue
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>